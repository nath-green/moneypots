{
  "name": "moneypots",
  "version": "1.0.0",
  "description": "Personal finance application interfacing with Firebase",
  "main": "index.js",
  "repository": "https://github.com/nath-green/moneypots.git",
  "author": "Nathan Green <hello@nathgreen.co.uk>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "parcel build src/index.html --no-cache",
    "clean": "rimraf 'dist' '.cache'",
    "dev": "parcel src/index.html",
    "lint": "run-s 'lint:js' 'lint:sass'",
    "lint:eslint": "eslint --config ./.eslintrc './src/core/**/*'",
    "lint:js": "yarn run lint:eslint ./src/core/**/* ; exit 0",
    "lint:sass": "stylelint ./src/styles/* ; exit 0",
    "start": "run-s 'clean' 'dev'",
    "prod": "run-s 'clean' 'build'",
    "test": "echo \"Error: no test specified\" && exit 1",
    "surge": "surge --domain moneypots.surge.sh ./dist"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "node-sass": "^4.11.0",
    "parcel-bundler": "^1.11.0",
    "parcel-plugin-static-files-copy": "^2.0.0",
    "sass": "^1.17.0"
  },
  "dependencies": {
    "autoprefixer": "^9.4.7",
    "basic-validate": "^1.0.0",
    "basic-validator": "^1.0.0",
    "classnames": "^2.2.6",
    "css-reset-and-normalize": "^1.2.0",
    "eslint": "^5.12.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-last": "0.0.5",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.3",
    "firebase": "^5.8.2",
    "flux": "^3.1.3",
    "history": "^4.7.2",
    "husky": "^1.3.1",
    "include-media": "^1.4.9",
    "jeet": "^7.2.0",
    "json5": "^2.1.0",
    "lint-staged": "^8.1.0",
    "moment": "^2.24.0",
    "npm-run-all": "^4.1.5",
    "parcel-plugin-asset-copier": "^1.0.0",
    "prettier": "^1.15.3",
    "react": "16.5.2",
    "react-datepicker": "^2.3.0",
    "react-dom": "16.5.2",
    "react-input-autosize": "^2.2.1",
    "react-key-handler": "^1.2.0-beta.3",
    "react-moment": "^0.8.4",
    "react-router-dom": "^4.3.1",
    "sass-lint": "^1.12.1",
    "stylelint": "^9.10.1",
    "stylelint-config-recommended": "^2.1.0",
    "surge": "^0.20.1",
    "toastr": "^2.1.4"
  },
  "assetsPath": "./static",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./src/core/**/*.{js,jsx}": [
      "yarn lint:eslint",
      "git add"
    ],
    "./src/styles/**/*.{scss}": [
      "yarn lint:sass",
      "git add"
    ]
  },
  "sass": {
    "includePaths": [
      "./node_modules"
    ]
  }
}
